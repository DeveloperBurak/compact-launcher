{
  "name": "compact-launcher",
  "productName": "Compact Launcher",
  "description": "Compact Launcher for Your Programs",
  "version": "0.5.1",
  "private": true,
  "author": "Burak Eren Karasu <developerburakeren@gmail.com>",
  "copyright": "PPROGA",
  "main": "app/background.js",
  "build": {
    "appId": "com.burak.compact-launcher",
    "productName": "Compact Launcher",
    "linux": {
      "category": "Utils",
      "packageCategory": "utils",
      "target": [
        "deb",
        "snap"
      ]
    },
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    }
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "preunit": "webpack --config=build/webpack.unit.config.js --env=test --display=none",
    "unit": "electron-mocha temp/specs.js --renderer --require source-map-support/register",
    "pree2e": "webpack --config=build/webpack.app.config.js --env=test --display=none && webpack --config=build/webpack.e2e.config.js --env=test --display=none",
    "e2e": "mocha temp/e2e.js --require source-map-support/register",
    "test": "npm run unit && npm run e2e",
    "start": "node build/start.js",
    "release": "webpack --config=build/webpack.app.config.js --env=production && electron-builder"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.13.0",
    "@node-steam/vdf": "^2.1.0",
    "active-win": "^6.1.0",
    "alertifyjs": "^1.13.1",
    "auto-launch": "^5.0.5",
    "bootstrap": "^4.3.1",
    "electron-store": "^5.1.1",
    "fs-jetpack": "^2.1.0",
    "jquery": "^3.4.1",
    "jquery-circle-progress": "^1.2.2",
    "jquery-contextmenu": "^2.9.0",
    "less-loader": "^5.0.0",
    "mkdirp": "^1.0.4",
    "popper.js": "^1.16.1",
    "winreg": "^1.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-loader": "^8.0.0-beta.4",
    "chai": "^4.1.0",
    "css-loader": "^3.1.0",
    "electron": "^6.*",
    "electron-builder": "^22.7.0",
    "electron-installer-snap": "^5.1.0",
    "electron-mocha": "^8.1.1",
    "electron-rebuild": "^1.10.1",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "mocha": "^6.2.0",
    "source-map-support": "^0.5.6",
    "spectron": "^6.0.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.38.0",
    "webpack-cli": "^3.3.6",
    "webpack-merge": "^4.1.3",
    "webpack-node-externals": "^1.7.2"
  }
}
