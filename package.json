{
  "name": "compact-launcher",
  "productName": "Compact Launcher",
  "description": "Compact Launcher for Your Programs",
  "version": "0.6.0",
  "private": true,
  "author": "Burak Eren Karasu <developerburakeren@gmail.com>",
  "copyright": "PPROGA",
  "main": "app/background.js",
  "build": {
    "appId": "com.burak.compact-launcher",
    "productName": "Compact Launcher",
    "linux": {
      "category": "Utils",
      "packageCategory": "utils",
      "target": [
        "deb",
        "snap"
      ]
    },
    "win": {
      "target": "nsis",
      "publish": []
    },
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    }
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "preunit": "webpack --config=build/webpack.unit.config.js --env=test --display=none",
    "unit": "electron-mocha temp/specs.js --renderer --require source-map-support/register",
    "pree2e": "webpack --config=build/webpack.app.config.js --env=test --display=none && webpack --config=build/webpack.e2e.config.js --env=test --display=none",
    "e2e": "mocha temp/e2e.js --require source-map-support/register",
    "test": "npm run unit && npm run e2e",
    "start": "node build/start.js",
    "release": "webpack --config=build/webpack.release.config.js --env=production && electron-builder --publish never"
  },
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.13.0",
    "@node-steam/vdf": "^2.1.0",
    "active-win": "^6.1.0",
    "alertifyjs": "^1.13.1",
    "auto-launch": "^5.0.5",
    "bootstrap": "^4.3.1",
    "electron-store": "^5.1.1",
    "fs-jetpack": "^2.1.0",
    "jquery": "^3.4.1",
    "jquery-contextmenu": "^2.9.0",
    "mkdirp": "^1.0.4",
    "popper.js": "^1.16.1",
    "progressbar.js": "^1.1.0",
    "winreg": "^1.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.13.8",
    "@babel/preset-env": "^7.13.12",
    "babel-loader": "^8.0.0-beta.4",
    "babel-preset-latest-node": "^5.5.1",
    "chai": "^4.1.0",
    "css-loader": "^5.2.0",
    "electron": "^11.4.0",
    "electron-builder": "^22.10.5",
    "electron-installer-snap": "^5.1.0",
    "electron-mocha": "^8.1.1",
    "electron-rebuild": "^2.3.5",
    "extract-text-webpack-plugin": "^3.0.2",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "mini-css-extract-plugin": "^1.4.0",
    "mocha": "^6.2.0",
    "optimize-css-assets-webpack-plugin": "^5.0.4",
    "parallel-webpack": "^2.6.0",
    "postcss-loader": "^5.2.0",
    "resolve-url-loader": "^3.1.2",
    "sass": "^1.32.8",
    "sass-loader": "^11.0.1",
    "source-map-support": "^0.5.6",
    "spectron": "^6.0.0",
    "webpack": "^5.28.0",
    "webpack-cli": "^4.6.0",
    "webpack-electron-reload": "^1.0.1",
    "webpack-merge": "^5.7.3",
    "webpack-node-externals": "^2.5.2"
  }
}
